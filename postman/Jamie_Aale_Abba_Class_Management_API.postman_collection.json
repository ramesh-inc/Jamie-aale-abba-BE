				{
					"name": "List Classes",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/admin/classes/?search=&is_active=true",
							"host": ["{{base_url}}"],
							"path": ["admin", "classes", ""],
							"query": [
								{
									"key": "search",
									"value": "",
									"description": "Search by class name, code, or age group"
								},
								{
									"key": "is_active",
									"value": "true",
									"description": "Filter by active status (true/false)"
								}
							]
						},
						"description": "Get list of all nursery classes with search and filter options"
					}
				},
				{
					"name": "Create Class",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"class_name\": \"Nursery 1\",\n    \"class_code\": \"N1-2024\",\n    \"age_group\": \"2-3 years\",\n    \"capacity\": 15,\n    \"room_number\": \"Room 101\",\n    \"academic_year\": \"2024-2025\",\n    \"is_active\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/admin/classes/",
							"host": ["{{base_url}}"],
							"path": ["admin", "classes", ""]
